@page
@model Razor_UI.Pages.EditModel
@{
}

<div class="text-center">
	<h1 class="display-4">Pubs: Edit Author</h1>
</div>

<form method="post" class="mt-3" enctype="multipart/form-data"
	  asp-page-handler="OnPost">

	<div class="form-group row">
		<label asp-for="Author.au_id" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input readonly asp-for="Author.au_id" class="form-control required" placeholder="nnn-nn-nnnn">
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Author.au_fname" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input asp-for="Author.au_fname" class="form-control" placeholder="First Name">
			<span asp-validation-for="Author.au_fname" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Author.au_lname" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input asp-for="Author.au_lname" class="form-control" placeholder="Last Name">
			<span asp-validation-for="Author.au_lname" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Author.au_address" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input asp-for="Author.au_address" class="form-control" placeholder="Street">
			<span asp-validation-for="Author.au_address" class="text-danger"></span>
		</div>
	</div>

	<div class="form-row">

		<div class="col-sm-2">
		</div>

		<div class="col">
			<label asp-for="Author.au_city"></label>
			<input asp-for="Author.au_city" class="form-control col" placeholder="City">
			<span asp-validation-for="Author.au_city" class="text-danger"></span>
		</div>

		<div class="col">
			<label asp-for="Author.au_state"></label>

			<input asp-for="Author.au_state" class="form-control" placeholder="XX">
			<span asp-validation-for="Author.au_state" class="text-danger"></span>
		</div>

		<div class="col">
			<label asp-for="Author.au_zip" c></label>

			<input asp-for="Author.au_zip" class="form-control" placeholder="00000">
			<span asp-validation-for="Author.au_zip" class="text-danger"></span>
		</div>

	</div>

	<div class="form-group row"></div>

	<div class="form-group row">
		<label asp-for="Author.au_phone" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input asp-for="Author.au_phone" class="form-control" placeholder="000 000-0000">
			<span asp-validation-for="Author.au_phone" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Author.au_contract" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-1">
			<input asp-for="Author.au_contract" class="form-control">
		</div>
	</div>

	<div class="form-group row"></div>

	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-page="Index" class="btn btn-primary">Cancel</a>
		</div>
	</div>

</form>